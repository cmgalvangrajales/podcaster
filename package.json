{
  "name": "podcaster",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "env": "node config/scripts/index.js",
    "dev": "cross-env ENV=local npm run env && vite",
    "build": "npm run env && tsc && vite build",
    "build:local": "cross-env ENV=local npm run build",
    "build:dev": "cross-env ENV=dev npm run build",
    "build:prod": "cross-env ENV=prod npm run build",
    "format:fix": "eslint --fix --max-warnings=0 --ext=js,jsx,ts,tsx src && prettier -w src",
    "format:check": "eslint --fix --max-warnings=0 --ext=js,jsx,ts,tsx src && prettier --check src",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "npm run env && jest --config ./jest.config.ts --detectOpenHandles",
    "test:coverage": "npm run env && jest --config ./jest.config.ts --coverage --detectOpenHandles"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "axios": "^1.6.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intl": "6.4.4",
    "react-query": "3.39.3",
    "react-router-dom": "6.15.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.1.2",
    "@testing-library/react": "14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "29.5.4",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "@types/react-intl": "3.0.0",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "^10.4.16",
    "chalk": "5.3.0",
    "cross-env": "7.0.3",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "husky": "8.0.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "lint-staged": "14.0.1",
    "postcss": "^8.4.33",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "vite": "5.0.8",
    "vite-tsconfig-paths": "4.2.0"
  }
}
